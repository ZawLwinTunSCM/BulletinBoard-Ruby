<fieldset class="form-group border">
  <legend class="text-center w-auto pt-3 pb-3">
    <h2><%= @post.title %>'s Detail</h2>
  </legend>
  <div class="detail">
    <div class="form-group row">
      <label class="col-md-4 col-form-label">ID</label>
      <input type="text" value="<%= @post.id %>" class="form-control col-md-8" readonly>
    </div>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">Title</label>
      <input type="text" value="<%= @post.title %>" class="form-control col-md-8" readonly>
    </div>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">Description</label>
      <input type="text" value="<%= @post.description %>" class="form-control col-md-8" readonly>
    </div>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">Author</label>
      <input type="text" value="<%= @post.user.name %>" class="form-control col-md-8" readonly>
    </div>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">Status</label>
      <input type="text" value="<%= @post.public_flg ? "Public" : "Private" %>" class="form-control col-md-8" readonly>
    </div>
    <div class="form-group text-center">
      <% if isCurrentUser(@post.created_user)%>
        <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-success mx-2" %>
        <%= link_to "Delete", post_path,
            method: :delete,
            data: { confirm: "Are you sure to delete?" }, class: "btn btn-danger mx-2" %>
      <% end %>
      <%= link_to "Back", posts_path, class: "btn btn-dark mx-2" %>
    </div>
  </div>
</fieldset>