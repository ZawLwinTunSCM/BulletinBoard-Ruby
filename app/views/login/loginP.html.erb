<h1 class="text-center py-5">Login</h1>
<div class="row">
  <div class = "card col-md-4 mx-auto">
    <div class="card-body">
      <%if notice %>
        <div class="text-danger"> <%= notice %> </div>
      <% end %>
      <%if alert %>
        <div class="text-success"> <%= alert %> </div>
      <% end %>
      <%= form_with(url: login_path, scope: :session, local: true) do |form| %>
        <div class="pt-2">
          <%= form.label :email, class: "required" %>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text font-weight-bold">@</div>
            </div>
            <%= form.email_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="pt-2">
          <%= form.label :password , class: "required" %>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
            </div>
            <%= form.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="pt-2 text-center">
          <%= form.submit "Login", class: "btn btn-primary mb-2" %><br>
          <%= link_to "Forgot Password", forgot_password_path , class: "link link-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
